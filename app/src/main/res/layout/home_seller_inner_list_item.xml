<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_seller_inner_list"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_seller_inner_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_below="@id/iv_seller_inner_list"
        android:layout_margin="5dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_shop_seller_inner_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_seller_inner_list"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_market_seller_inner_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_seller_inner_list"
        android:layout_marginRight="4dp"
        android:textColor="@color/normall"
        android:layout_alignRight="@id/tv_seller_inner_list"
        android:textSize="12sp"
        android:layout_marginTop="1dp"/>

</RelativeLayout>